<header class="header">
    <div class="row">
        <div class="six columns">
            <ul>
                <li>
                    <a href="{{ path('monitoring') }}">Мониторинг</a>
                </li>
                <li>
                    <a href="{{ path('search') }}">Поиск звонков</a>
                </li>
                <li>
                    <a href="{{ path('reports') }}">Отчеты</a>
                </li>
                {% if is_granted('ROLE_ADMIN') %}
                    <li>
                        <a href="{{ path('admin') }}">Страница администратора</a>
                    </li>
                {% endif %}
            </ul>
        </div>
        <div class="six columns">
            <div class="row">
                <div class="four columns">&nbsp;</div>
                <div class="eight columns text-right">
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <span class="top-bar-element"> Здравствуйте, {{ app.user.username }}</span>
                    {% endif %}
                    <span class="top-bar-element">
                    <a href="{{ path('logout') }}">Выйти</a>
                </span>
                </div>
            </div>
        </div>
    </div>
</header>